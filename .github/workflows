name: Notify Slack on Pull Request

on:
  pull_request:
    types: [opened]

jobs:
  notify:
    if: ${{ contains(github.event.pull_request.title, 'example') }}
    runs-on: ubuntu-latest
    steps:
      - name: Notify Slack
        uses: slack/webhook@v1
        with:
          url: ${{ secrets.SLACK_WEBHOOK_URL }}
          text: 'A pull request containing the word "example" has been opened!'
