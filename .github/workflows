name: Slack Notification
on:
  pull_request:
    types: [opened, edited]

jobs:
  slack:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Send notification to Slack
        uses: rtCamp/action-slack-notify@v2.3
        env:
          SLACK_WEBHOOK: ${{ secrets.SLACK_WEBHOOK_URL }}
          SLACK_USERNAME: "GitHub Actions"
          SLACK_MESSAGE: "Pull Request cont√©m a palavra 'exemplo'"
          SLACK_COLOR: "#36a64f"
        if: ${{ github.event.pull_request.title =~ 'exemplo' }}
